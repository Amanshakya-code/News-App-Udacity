<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="#ECE07E">


        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:textColor="#36434E"
            android:textSize="12sp"
            tools:text="great wall of india" />

    <TextView
        android:id="@+id/Discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/Title"
        android:textColor="#4D759E"
        android:textSize="16sp"
        tools:text="PILITICS" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4D759E"
            android:textSize="12sp"
            android:layout_below="@+id/Title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            tools:text="Mar 6, 2010" />

        <TextView
            android:id="@+id/TIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_alignParentEnd="true"
            android:textColor="#4D759E"
            android:textSize="12sp"
            tools:text="3:00 PM" />
    <TextView
        android:drawableStart="@drawable/ic_open_in_new_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/for_more_info_click_here"
        android:textSize="15sp"
        android:textColor="#C003A9F4"
        android:layout_below="@+id/Discription"
        />

</RelativeLayout>